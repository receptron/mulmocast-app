{
  "extends": "./tsconfig.common.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/*"],
      "@/types": ["src/types"],
      "@/types/*": ["src/types/*"]
    }
  },
  "include": ["src/renderer/**/*", "src/types/**/*"]
}
